<style>
    .staff-section { 
        padding: 0 3rem;
        display: flex;
        flex-direction: column;
        gap: 1rem 0;
    }

    .staff-section__title{
        font: normal normal 800 1.9rem var(--main-font, Arial);
        text-decoration: underline;
        text-align: center;
        margin-bottom: 2rem;
    }

    .staff-section__staff-list{
        display: grid;
        grid-template-columns: repeat(auto-fit, 320px);
        justify-content: center;
        justify-items: center;
        gap: 1.5rem;
    }
    
    .staff-item{
        width: clamp(200px, 100%, 270px);
        font: normal normal 500 1.8rem var(--main-font, Arial);
        text-align: center;
        position: relative;
        align-items: center;
        display: grid;
    }

    .staff-item__image{
        height: 60vh;
        max-width: 100%;
        object-fit: cover;
        border-radius: 6px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
    }
    .staff-item__name{
        width: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 0 0 6px 6px;
        position: absolute;
        place-self: end center;
        padding: .3rem 0;
        font: normal normal 500 1.5rem var(--main-font, Arial);
        color: var(--white);
        text-shadow: 4px 4px 2px rgba(0,0,0, 1);
    }
</style>