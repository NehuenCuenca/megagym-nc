<style>
    .CTA-container{
        display: flex;
        flex-direction: column-reverse;
        padding: 0 .5rem;
        gap: 2rem 3rem;
    }

    .carousel-container{
        width: 80%;
        margin: 0 auto;
    }
    
    .CTA{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        row-gap: 1rem;
    }

    .CTA__title {
        /* https://css-tricks.com/snippets/css/font-shorthand/#aa-syntax */
        font: normal normal normal clamp(2.6rem, 6vw, 3rem) var(--special-font, Tahoma);
        max-width: 30ch;
    }

    .CTA__paragraph {
        font: normal normal 600 clamp(1.5rem, 2vw, 2rem) var(--main-font, Arial);
        max-width: 25ch;
    }

    .CTA__link-to-activities {
        font: normal normal 800 2rem var(--main-font, Arial);
        text-decoration: underline;
    }

    @media (width >= 768px) {
        .CTA-container{
            padding: 0 4rem ;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
    }
</style>