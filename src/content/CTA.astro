const carouselImages = [picture1.src, picture2.src, picture3.src, picture4.src, picture5.src, picture6.src];
---
<section class="CTA-container">
    <div class="carousel-container">
        <Carousel images={carouselImages} client:load/>
    </div>
    <div class="CTA">
        <h1 class="CTA__title">Â¿Estas preparad@ para la experiencia MEGAGYM?</h1>
        <p class="CTA__paragraph">Contamos con el lugar, equipamiento y profesionalismo necesario para tu entrenamiento.</p>
        <a href="#activities" class="CTA__link-to-activities">Â¡Conoce nuestras actividades! ðŸ”¥</a>
    </div>
