<style>
.testimonials-section{
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem 0;
}
.testimonials-section__title{
    text-align: center;
    font: normal normal 800 1.9rem var(--main-font, Arial);
    text-decoration: underline;
}
.testimonials{
    display: grid;
    grid-template-areas: 
        "large1"
        "short1"
        "short2"
        "short3"
        "large2" 
    ;
    gap: 2rem;
}
.testimonials__item{
    position: relative;
    border-radius: 6px;
    background-color: var(--off-white);
    box-shadow: 2px 5px 20px rgba(0,0,0, 0.5);
    padding: 1rem;
}

.user-img{
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    -webkit-shape-outside:circle();
    shape-outside:circle();
    box-shadow: 2px 2px 10px rgba(0,0,0, 0.5);
}

.testimonials__item:nth-child(even) .user-img{
    float: right;
    margin-left:2rem;
     
}
.testimonials__item:nth-child(odd) .user-img{
    float: left;
    margin-right:2rem;
}

.user-name{
    font: normal normal 600 1.35rem var(--main-font, Arial);
    text-decoration: underline;
    margin-bottom: .3rem;
}

.testimony{
    grid-area: paragraph;
    font: normal normal 400 1.15rem var(--main-font, Arial);
    text-align: justify;
}

.testimonials__item:nth-child(1){ 
    grid-area: large1;
}
.testimonials__item:nth-child(2){ 
    grid-area: short1;
}
.testimonials__item:nth-child(3){ 
    grid-area: short2;
}
.testimonials__item:nth-child(4){ 
    grid-area: short3;
}
.testimonials__item:nth-child(5){ 
    grid-area: large2;
}

@media (width > 500px){
    .testimonials-section{ padding: 0 1rem; }
    .testimonials{
        grid-template-areas: 
        "large1 short1" 
        "short2 short3" 
        "large2 large2" 
        ;
    }
}

@media (width > 768px){
    .testimonials-section{ padding: 0 5rem; }   

    .testimonials{
        grid-template-areas: 
        "large1 large1 large1" 
        "short1 short2 short3" 
        "large2 large2 large2" 
        ;
    }
}
</style>