---
const { title } = Astro.props;

// Fonts
import '@fontsource-variable/gabarito';
import '@fontsource-variable/roboto-flex';

// Components
import Navbar from '../components/Navbar/Navbar.jsx'
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header >
			<Navbar client:load/>
		</header>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		background-color: #FFFFFF;
		--logo-font: 'Gabarito variable', Tahoma;
		--default-font: 'Roboto Flex Variable', sans-serif, Arial;
		--black: #000000;
		--white: #FFFFFF;
		--false-black: #1C1C1B;
		--grey: #B2B0B0;
		--grey-soft: #CACBC9;
		--grey-dark: #81807E;
		--gold: #DEC73A;
	}

	[data-theme="light"] {
		background-image: url(../assets/backgrounds/background-light-mesh.webp);
		--color-bg: var(--main-yellow);
		--color-font: var(--false-black);
		--color-shadow: var(--false-black);
	}

	[data-theme="dark"] {
		background-image: url(../assets/backgrounds/background-dark-mesh.webp);
		--color-bg: var(--false-black);
		--color-font: var(--main-yellow);
		--color-shadow: var(--secondary-yellow);
	}

	/* RESETS */
	*, *::before, *::after {
		box-sizing: border-box;
	}
	
	* {
		margin: 0;
	}

	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
	}

	img, picture, video, canvas, svg {
		display: block;
		max-width: 100%;
	}

	p {
		overflow-wrap: break-word;
	}

	a { 
		color:inherit;
	}
	
	ul,ol { 
		list-style-type: none;
		padding: 0
	}

	html {
		font-family: var(--default-font);
		background-repeat: no-repeat;
		background-size: cover;
		width: 100%;
		scroll-behavior: smooth;
	}

	header {
		width: 100%;
		position: sticky;
		top: 0;
		z-index: 9;
	}

	section {
		scroll-margin-block-start: 120px; /*Adds margin to the top of the viewport*/
		scroll-margin-block-end: 120px; /*Adds margin to the bottom of the viewport*/
	}
</style>